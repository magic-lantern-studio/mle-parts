TARGETS = MleIvStage.dll

LCXXDEFS = \
    -DML_MATH_DEBUG=0 \
    -DML_FIXED_POINT=0\
    -DREHEARSAL_EXPORTS \
    -DMLE_MAKE_DLL \
    -DMLE_DLL \
    -DMLE_REHEARSAL \
    -DSOWIN_DLL \
    -DCOIN_DLL \
    $(NULL)

LCOPTS = \
    -O2 -MT \
    -Fp"MleIvStage.pch" \
    -FD \
    $(NULL)

LCXXOPTS = \
    -O2 -MT \
    -Fp"MleIvStage.pch" \
    -FD \
    $(NULL)

LLDOPTS = \
    -dll -nologo \
    -libpath:$(MLE_ROOT)/lib/rehearsal \
    -libpath:$(MLE_ROOT)/Core/util/win32/lib \
    -libpath:$(MLE_ROOT)/ATK/win32/src/Release \
    -libpath:$(COINDIR)/lib \
    -machine:I386 \
    -out:"MleIvStage.dll" \
    -map:"MleIvStage.map" \
    $(NULL)

LCXXFILES = \
    $(NULL)

LLDLIBS = \
    mleatk.lib \
    Mle2dRole.lib \
    Mle3dRole.lib \
    Mle2dSet.lib \
    Mle3dSet.lib \
    mlert.lib \
    DWP.lib \
    mlmath.lib \
    coin2.lib \
    sowin1.lib \
    User32.lib \
    Gdi32.lib \
    psapi.lib \
    $(NULL)
